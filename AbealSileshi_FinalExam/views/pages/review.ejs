<%- include('../partials/header') %>
<%- include('../partials/menu'); -%>
	
<div class="" style="background-color: #0f415c;">
    <div class="container-fluid" style="padding: 2%; ">
      <form class="" action="/filter" method="GET">
        <div class="row">
          <div class="col-3">
          </div>
          <div class="col-5">
            <input class="form-control" type="text" name="title" placeholder="Enter movie title">
          </div>
          <div class="col-1">
            <input class="btn btn-light" type="submit" name="Submit" value = "Filter"/>
          </div>
        </div>
      </form>
    </div>
  </div>

  
  <div class="container">
    <br>    
    <table class="table table-bordered" id="stats_table">
      <tr>
        <th>TV show</th>
        <th>Review</th>
        <th>Review Date</th>
      </tr>
      
			<% 
			if(reviews) {
				var table = '';
				reviews.forEach(function (item){
					table += '<tr><td name = "title">' + item.tv_show + '</td><td>' + item.review + '</td><td>' + item.review_date + '</td>';
						table +='</tr>';
				}); %>
				<%- table %>
			<% } %>
		</table>
  </div>

<%- include('../partials/footer') %>